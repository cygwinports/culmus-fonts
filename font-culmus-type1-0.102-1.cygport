ORIG_PN=culmus

inherit font

DESCRPTION="Hebrew Type1 fonts"
HOMEPAGE="http://culmus.sourceforge.net/"
SRC_URI="mirror://sourceforge/${ORIG_PN}/${ORIG_PN}-${PV}.tar.gz"

DOCS="GNU-GPL LICENSE-BITSTREAM"

src_compile() { :; }
src_test() { :; }

src_install() {
	cd ${S}
	fontinto Type1
	dofont *.afm *.pfa

	fontinto TTF
	dofont *.ttf

	insinto /etc/fonts/conf.d
	doins culmus.conf
}
